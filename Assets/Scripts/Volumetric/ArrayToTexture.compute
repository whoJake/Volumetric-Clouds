#pragma kernel Copy3D

StructuredBuffer<float> source;
RWTexture3D<float> destination;
int texSize;

[numthreads(8,8,8)]
void Copy3D (uint3 id : SV_DispatchThreadID)
{
    uint3 sample = uint3(id);
    float data = source[sample.x + texSize * sample.y + texSize * texSize * sample.z];

    destination[id] = 1 - data;
}
